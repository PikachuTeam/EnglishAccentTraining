<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_dialog"
    android:orientation="vertical"
    android:padding="@dimen/common_size_10">

    <ImageView
        android:layout_width="@dimen/common_size_60"
        android:layout_height="@dimen/common_size_60"
        android:layout_gravity="center"
        android:src="@drawable/app_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_size_10"
        android:gravity="center"
        android:paddingLeft="@dimen/common_size_35"
        android:paddingRight="@dimen/common_size_35"
        android:text="Chat with people all over the world"
        android:textSize="@dimen/common_text_size_13" />

    <EditText
        android:id="@+id/ed_rename"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_size_50"
        android:layout_marginTop="@dimen/common_size_10"
        android:background="@drawable/bg_lesson"
        android:gravity="center"
        android:hint="Enter a cool nickname"
        android:lines="1"
        android:maxLength="20"
        android:maxLines="1"
        android:textSize="@dimen/common_size_15" />


    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/lesson_name_width"
        android:layout_height="@dimen/common_size_40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/common_size_10"
        android:background="@drawable/border_button_dialog"
        android:gravity="center"
        android:text="Join"
        android:textColor="@color/white"
        android:textSize="@dimen/common_size_15" />
</LinearLayout>