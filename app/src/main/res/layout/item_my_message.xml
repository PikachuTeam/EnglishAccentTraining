<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/common_size_3"
        android:layout_marginLeft="@dimen/common_size_80"
        android:layout_marginRight="@dimen/common_size_3"
        app:cardCornerRadius="@dimen/common_size_5">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_chat_bg"
            android:orientation="vertical"
            android:padding="@dimen/common_size_5">

            <TextView
                android:id="@+id/tv_content_my_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/common_text_size_13"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="5dp"
                tools:text="a"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_content_my_mess"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_content_my_mess">

                <TextView
                    android:id="@+id/tv_time_chat_my_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_size_15"
                    android:textSize="@dimen/common_size_8"
                    tools:text="17:14"/>

                <ImageView
                    android:id="@+id/img_send"
                    android:layout_width="@dimen/common_size_12"
                    android:layout_height="@dimen/common_size_12"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_message_error"
                    android:visibility="gone"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>