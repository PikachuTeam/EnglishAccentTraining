<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_size_10"
        android:layout_marginLeft="@dimen/common_size_80"
        android:layout_marginRight="@dimen/common_size_20"
        android:layout_marginTop="@dimen/common_size_10"
        android:elevation="@dimen/common_size_10"
        app:cardBackgroundColor="@color/my_chat_bg"
        app:cardCornerRadius="@dimen/common_size_5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/common_size_10">

            <TextView
                android:id="@+id/tv_content_my_mess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/common_text_size_13"
                tools:text="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_content_my_mess"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_time_chat_my_mess"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_size_15"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/common_size_5"
                    android:textSize="@dimen/common_size_11"
                    tools:text="17:14" />

                <ImageView
                    android:id="@+id/img_send"
                    android:layout_width="@dimen/common_size_15"
                    android:layout_height="@dimen/common_size_15"
                    android:src="@drawable/ic_sent" />
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>