<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_size_3"
        android:layout_marginLeft="@dimen/common_size_3"
        android:layout_marginRight="@dimen/common_size_80"
        app:cardCornerRadius="@dimen/common_size_5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/common_size_5">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_size_20"
                android:textColor="@color/primary_light"
                android:textSize="@dimen/common_text_size_13"
                android:textStyle="bold"
                tools:text="Dong occho" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user_name"
                android:textColor="#000000"
                android:textSize="@dimen/common_text_size_13"
                tools:text="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_time_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_content"
                android:layout_gravity="right"
                android:textSize="@dimen/common_size_11"
                tools:text="17:14" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>