<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_new"
    tools:context="com.tatteam.android.englishaccenttraining.StartActivity">

    <ImageView
        android:id="@+id/img_app_icon"
        android:layout_width="@dimen/img_app_icon_size"
        android:layout_height="@dimen/img_app_icon_size"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_app_icon"
        android:background="@drawable/app_icon" />
    <LinearLayout
        android:id="@+id/tv_appNameStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_text"
        android:layout_marginRight="@dimen/margin_text"
        android:gravity="center"
        android:layout_below="@id/img_app_icon"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="American"
            android:textColor="@color/primary"
            android:textSize="@dimen/common_text_size_25"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English"
            android:gravity="center_horizontal"
            android:textColor="@color/primary"
            android:textSize="@dimen/common_text_size_25"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accent Guide"
            android:gravity="center_horizontal"
            android:textColor="@color/primary"
            android:textSize="@dimen/common_text_size_25"
            android:textStyle="bold"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_appNameStart"
        android:layout_marginTop="@dimen/padding_listview_left">
        <Button
            android:id="@+id/btn_start_app"
            android:layout_width="@dimen/common_size_100"
            android:layout_height="@dimen/common_size_100"
            android:background="@drawable/start_app_new"
            android:layout_marginLeft="@dimen/margin_text"/>
        <LinearLayout
            android:id="@+id/layout_privacy"
            android:layout_width="@dimen/common_size_100"
            android:layout_height="@dimen/common_size_100"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_text"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/common_size_80"
                android:layout_height="@dimen/common_size_80"
                android:background="@drawable/ic_privacy" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_20"
                android:text="Privacy policy"
                android:gravity="center"
                android:textSize="@dimen/common_text_size_13"
                android:textColor="@color/primary"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/btn_new_app"
            android:layout_width="@dimen/common_size_100"
            android:layout_height="@dimen/common_size_100"
            android:background="@drawable/esl_button"
            android:layout_below="@id/btn_start_app"
            android:layout_marginTop="@dimen/common_size_20"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
